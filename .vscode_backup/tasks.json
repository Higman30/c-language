{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C: Build active file",
      "type": "shell",
      "command": "clang",
      "args": [
        "-std=c17",
        "-Wall", "-Wextra",
        "-g",
        "${file}",
        "-o", "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "detail": "Build the currently active C file with clang"
    }
  ]
}
